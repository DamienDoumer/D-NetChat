        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoumeraNetChat"
        mc:Ignorable="d"
        Title="Welcome Window" Height="229.363" Width="557.022" WindowStartupLocation="CenterOwner" Background="{DynamicResource PaperPlaneBackGround}" MouseDown="Window_MouseDown" BorderBrush="SkyBlue" BorderThickness="1" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize">
